
<button type="button" class="btn btn-primary btn-lg"><%=link_to "Add a playground", new_playground_path%></button>

<div id="map"
     style="width: 50%; height: 400px; margin-left: auto; margin-right:auto;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class ="container-1">
  <% @playgrounds.each do |playground| %>
  <%= render "playground_card", playground: playground %>
  <% end %>
</div>
