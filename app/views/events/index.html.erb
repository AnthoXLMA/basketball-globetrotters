<h1>See the event agenda</h1>
<% @events.each do |event| %>
<%= event.name %>
<% end %>


<a class="link"><%=link_to "Add an event", new_event_path%></a>

<div id="map"
     style="width: 50%; height: 400px; margin-left: auto; margin-right:auto;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class ="container-1">
  <% @events.each do |event| %>
  <%= render "event_card", event: event %>
  <% end %>
</div>
